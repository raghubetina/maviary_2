<% was_validated = contact.errors.any? %>

<%= form_with(model: contact, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for adder_id start -->
  <div class="form-group">
    <% adder_class = "form-control" %>
    <% adder_was_invalid = contact.errors.include?(:adder) %>

    <% if was_validated %>
      <% if adder_was_invalid %>
        <% adder_class << " is-invalid" %>
      <% else %>
        <% adder_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :adder_id %>
    <!-- Input for adder_id start -->
    <%= f.collection_select :adder_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for adder_id end -->
    <% if adder_was_invalid %>
      <% contact.errors.full_messages_for(:adder).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for adder_id end -->
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = contact.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% contact.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for added_id start -->
  <div class="form-group">
    <% added_class = "form-control" %>
    <% added_was_invalid = contact.errors.include?(:added) %>

    <% if was_validated %>
      <% if added_was_invalid %>
        <% added_class << " is-invalid" %>
      <% else %>
        <% added_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :added_id %>
    <!-- Input for added_id start -->
    <%= f.collection_select :added_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for added_id end -->
    <% if added_was_invalid %>
      <% contact.errors.full_messages_for(:added).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for added_id end -->
  <!-- Label and input for email start -->
  <div class="form-group">
    <% email_class = "form-control" %>
    <% email_was_invalid = contact.errors.include?(:email) %>

    <% if was_validated %>
      <% if email_was_invalid %>
        <% email_class << " is-invalid" %>
      <% else %>
        <% email_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :email %>
    <!-- Input for email start -->
    <%= f.text_field :email, class: email_class, placeholder: "Enter email" %>
    <!-- Input for email end -->
    <% if email_was_invalid %>
      <% contact.errors.full_messages_for(:email).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for email end -->
  <!-- Label and input for picture start -->
  <div class="form-group">
    <% picture_class = "form-control" %>
    <% picture_was_invalid = contact.errors.include?(:picture) %>

    <% if was_validated %>
      <% if picture_was_invalid %>
        <% picture_class << " is-invalid" %>
      <% else %>
        <% picture_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :picture %>
    <!-- Input for picture start -->
    <%= f.text_field :picture, class: picture_class, placeholder: "Enter picture" %>
    <!-- Input for picture end -->
    <% if picture_was_invalid %>
      <% contact.errors.full_messages_for(:picture).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for picture end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
