<%= form_with(model: @contact, local: true) do |f| %>

  <%= f.hidden_field :adder_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :added_id %>
    <%= f.text_field :added_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :picture %>
    <%= f.text_field :picture, class: "form-control" %>
  </div>

  <%= f.submit "Create contact", class: "btn btn-block btn-outline-secondary" %>
<% end %>
