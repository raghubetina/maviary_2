<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Invitations

    <a data-toggle="collapse" href="#user_invitations_new_form">
      Add invitation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.invitations.each do |invitation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to invitation, invitation_path(invitation) %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_invitations_new_form">
        <%= render partial: "users/user_invitations_new_form" %>
      </div>
    </div>

  </ul>
</div>
