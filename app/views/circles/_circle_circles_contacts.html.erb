<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Circles Contacts

    <a data-toggle="collapse" href="#circle_circles_contacts_new_form">
      Add circles contact
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @circle.circles_contacts.each do |circles_contact| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to circles_contact, circles_contact_path(circles_contact) %>

        <%= link_to circles_contact, method: :delete, data: { confirm: "Do you really want to delete this circles_contact" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="circle_circles_contacts_new_form">
        <%= render partial: "circles/circle_circles_contacts_new_form" %>
      </div>
    </div>

  </ul>
</div>
