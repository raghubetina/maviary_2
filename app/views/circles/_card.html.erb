<div class="card mb-3">
  <h2 class="card-header h4">
    Circle #<%= circle.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= circle.name %></dd>

      <dt>User</dt>
      <dd>
        <% if @circle.user.present? %>
          <%= link_to circle.user, circle.user %>
        <% end %>
      </dd>

      <dt>Picture</dt>
      <dd><%= circle.picture %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back circle, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @circle.user %>
          <%= link_to edit_circle_url(circle), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @circle.user %>
          <%= link_to circle, method: :delete, data: { confirm: "Do you really want to delete this circle?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(circle.updated_at) %> ago
  </div>
</div>
