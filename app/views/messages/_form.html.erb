<% was_validated = message.errors.any? %>

<%= form_with(model: message, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for body start -->
  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = message.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>
    <!-- Input for body start -->
    <%= f.text_area :body, class: body_class, placeholder: "Enter body" %>
    <!-- Input for body end -->
    <% if body_was_invalid %>
      <% message.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for body end -->
  <!-- Label and input for ancestry start -->
  <div class="form-group">
    <% ancestry_class = "form-control" %>
    <% ancestry_was_invalid = message.errors.include?(:ancestry) %>

    <% if was_validated %>
      <% if ancestry_was_invalid %>
        <% ancestry_class << " is-invalid" %>
      <% else %>
        <% ancestry_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :ancestry %>
    <!-- Input for ancestry start -->
    <%= f.text_field :ancestry, class: ancestry_class, placeholder: "Enter ancestry" %>
    <!-- Input for ancestry end -->
    <% if ancestry_was_invalid %>
      <% message.errors.full_messages_for(:ancestry).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for ancestry end -->
  <!-- Label and input for chat_id start -->
  <div class="form-group">
    <% chat_class = "form-control" %>
    <% chat_was_invalid = message.errors.include?(:chat) %>

    <% if was_validated %>
      <% if chat_was_invalid %>
        <% chat_class << " is-invalid" %>
      <% else %>
        <% chat_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :chat_id %>
    <!-- Input for chat_id start -->
    <%= f.collection_select :chat_id, Chat.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for chat_id end -->
    <% if chat_was_invalid %>
      <% message.errors.full_messages_for(:chat).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for chat_id end -->
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = message.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.number_field :user_id, class: user_class, placeholder: "Enter user" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% message.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
