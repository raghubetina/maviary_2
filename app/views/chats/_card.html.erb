<div class="card mb-3">
  <h2 class="card-header h4">
    Chat #<%= chat.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= chat.name %></dd>
      <!-- Display name end -->

      <dt>Creator</dt>
      <!-- Display creator_id start -->
      <dd><%= chat.creator_id %></dd>
      <!-- Display creator_id end -->

      <dt>Picture</dt>
      <!-- Display picture start -->
      <dd><%= chat.picture %></dd>
      <!-- Display picture end -->

      <dt>Topic</dt>
      <!-- Display topic start -->
      <dd><%= chat.topic %></dd>
      <!-- Display topic end -->

      <dt>Link</dt>
      <!-- Display link start -->
      <dd><%= chat.link %></dd>
      <!-- Display link end -->

      <dt>Cover</dt>
      <!-- Display cover start -->
      <dd><%= chat.cover %></dd>
      <!-- Display cover end -->

      <dt>Event</dt>
      <!-- Display event start -->
      <dd><%= chat.event %></dd>
      <!-- Display event end -->

      <dt>Starts at</dt>
      <!-- Display starts_at start -->
      <dd><%= chat.starts_at %></dd>
      <!-- Display starts_at end -->

      <dt>Ends at</dt>
      <!-- Display ends_at start -->
      <dd><%= chat.ends_at %></dd>
      <!-- Display ends_at end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back chat, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link chat start -->
      <div class="col">
        <%= link_to edit_chat_url(chat), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link chat end -->

      <!-- Delete link chat start -->
      <div class="col">
        <%= link_to chat, method: :delete, data: { confirm: "Do you really want to delete this chat?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link chat end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(chat.updated_at) %> ago
  </div>
</div>
