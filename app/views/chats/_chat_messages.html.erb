<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Messages

    <a data-toggle="collapse" href="#chat_messages_new_form">
      Add message
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @chat.messages.each do |message| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to message, message_path(message) %>

        <% if current_user == message.user %>
          <%= link_to message, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="chat_messages_new_form">
        <%= render partial: "chats/chat_messages_new_form" %>
      </div>
    </div>

  </ul>
</div>
